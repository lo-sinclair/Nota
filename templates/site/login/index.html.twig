{% extends 'site/base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">
    <div class="col">
        <form class="reg" action="{{ path('app_login') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div><h2 class="text-reg">Вход</h2></div>
            <!-- поле ввода электронной почты -->
            <div class="form-group">
                <input
                        type="email"
                        placeholder="Email"
                        id="username"
                        name="_username"
                        class="form-control"
                        value="{{ last_username }}"
                        required
                />
            </div>
            <!-- поле ввода пароля -->
            <div class="form-group">
                <input
                        type="password"
                        placeholder="Пароль"
                        id="password"
                        name="_password"
                        class="form-control"
                        required
                />
            </div>
            <!-- кнопка отправки данных на сервер -->
            <div class="text-center">
                <input
                        type="submit"
                        id="log-in"
                        class="btn btn-reg "
                        value="Войти"
                />
            </div>
            <!-- вход для тех, у кого уже есть аккаунт -->
            <div class="reg-link"><p>
                    Еще не зарегистрированы?
                    <a class="url-link" href="{{ path('app_register') }}">Регистрация</a>
                </p>
            </div>
        </form>
    </div>
    </div>

{% endblock %}
